{% extends 'admin/adminbase.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row no-gutters">
            <div class="col-12 mt-5">
                <h1 class="display-4 text-center mt-5">
                    {{ title }}
                </h1>
            </div>
        </div>
    </div>


    <div class="container w-75">
        <div class="row no-gutters">
            <div class="col-12 mt-5 text-center">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Email</th>
                            <th scope="col">ФИО</th>
                            <th scope="col">Роли</th>
                            <th scope="col">Действие</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <th scope="row"></th>
                            <td>{{ user.email }}</td>
                            <td>{{ user.fullName }}</td>
                            <td>{{ user.roles | json_encode }}</td>
                            <td>
                                <a href="{{ path("admin_user_update", {'userId':user.id}) }}" class="btn btn-primary">
                                    Редактировать
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row no-gutters">
            <div class="col-12">
                <a href="{{ path("admin_user_create") }}" class="btn btn-success">Создать пользоватeля</a>
            </div>
        </div>
    </div>

{% endblock %}